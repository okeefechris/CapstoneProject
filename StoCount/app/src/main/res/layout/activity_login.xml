<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hengtan.nanodegreeapp.stocount.LoginActivity">

    <TextView
        android:id="@+id/helloWorldTextView"
        android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:scrollbars = "vertical" android:maxLines="20" />

    <Button
        android:id="@+id/scanButton"
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helloWorldTextView"/>


    <Button
        android:id="@+id/searchButton"
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"/>
</RelativeLayout>
