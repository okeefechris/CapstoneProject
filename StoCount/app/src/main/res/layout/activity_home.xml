<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<TextView android:id="@+id/stockPeriodDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Stock Period Start Date"
    />

    <Button
        android:id="@+id/scanButton"
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stockPeriodDate"
    />


    <Button
        android:id="@+id/searchButton"
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanButton"
        android:layout_toRightOf=  "@+id/scanButton"/>

    <Button
        android:id="@+id/viewButton"
        android:text="View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf=  "@+id/scanButton"
        android:layout_below="@+id/stockPeriodDate"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment"
        android:name="com.hengtan.nanodegreeapp.stocount.AdFragment"
        tools:layout="@layout/fragment_ad" android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
